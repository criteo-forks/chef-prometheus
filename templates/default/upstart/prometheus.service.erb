description "Prometheus"
start on (local-filesystems and net-device-up IFACE!=lo)
stop on runlevel [016]

respawn
env GOMAXPROCS=<%= node['cpu']['total'] %>

script
  exec su -s /bin/sh - <%= node['prometheus']['user'] %> -c "<%= node['prometheus']['binary'] %> <%= generate_flags %> > <%= node['prometheus']['log_dir'] %>/prometheus.log 2>&1"
end script
